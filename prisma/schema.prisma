// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    @@index([name])
}

model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String?
    access_token             String?
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String?
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    password      String?
    learningStyle String?   @default("reading")
    autoAdapt     Boolean   @default(false)
    // Customization fields
    theme         String?   @default("light")
    accentColor   String?   @default("blue")
    fontSize      String?   @default("medium")
    compactMode   Boolean   @default(false)
    defaultNoteFormat String? @default("summary")
    autoSaveNotes Boolean   @default(true)
    emailNotifications Boolean @default(true)
    lastActive    DateTime?
    studyStreak   Int       @default(0)
    // Relations
    accounts      Account[]
    sessions      Session[]
    posts         Post[]
    notes         Note[]
    citations     Citation[]
    examPredictions ExamPrediction[]
    hostedBattles Battle[] @relation("BattleHost")
    joinedBattles Battle[] @relation("BattleOpponent")
    battleParticipants BattleParticipant[]
    battleResults BattleResult[]
    createdStudyGroups StudyGroup[] @relation("StudyGroupCreator")
    studyGroupMemberships StudyGroupMember[]
    groupMessages GroupMessage[]
    conceptConnections ConceptConnection[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  format    String
    tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([userId])
}

model Citation {
    id          String   @id @default(cuid())
    author      String
    title       String
    publication String?
    date        String?
    url         String?
    pages       String?
    format      String
    createdAt   DateTime @default(now())

    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
    @@index([createdAt])
}

model ExamPrediction {
    id              String   @id @default(cuid())
    examType        String
    uploadedContent String   @db.Text
    syllabusContent String?  @db.Text
    predictions     Json
    analytics       Json?
    createdAt       DateTime @default(now())

    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
    @@index([createdAt])
}

model Battle {
    id             String   @id @default(cuid())
    code           String   @unique
    noteId         String?
    title          String?
    status         String   @default("waiting")
    questionCount  Int      @default(10)
    questions      Json
    hostScore      Int      @default(0)
    opponentScore  Int      @default(0)
    hostAnsweredAt DateTime?
    opponentAnsweredAt DateTime?
    startedAt      DateTime?
    completedAt    DateTime?
    createdAt      DateTime @default(now())

    hostId     String
    opponentId String?

    host     User  @relation("BattleHost", fields: [hostId], references: [id], onDelete: Cascade)
    opponent User? @relation("BattleOpponent", fields: [opponentId], references: [id], onDelete: SetNull)

    battleQuestions BattleQuestion[]
    participants BattleParticipant[]
    result       BattleResult?

    @@index([hostId])
    @@index([opponentId])
    @@index([status])
    @@index([createdAt])
}

model BattleQuestion {
    id            String  @id @default(cuid())
    battleId      String
    question      String  @db.Text
    options       Json?
    correctAnswer String
    points        Int     @default(10)
    orderIndex    Int

    battle Battle @relation(fields: [battleId], references: [id], onDelete: Cascade)

    @@index([battleId])
}

model BattleParticipant {
    id             String   @id @default(cuid())
    battleId       String
    userId         String
    answers        Json?
    score          Int      @default(0)
    correctCount   Int      @default(0)
    totalAnswered  Int      @default(0)
    joinedAt       DateTime @default(now())

    battle Battle @relation(fields: [battleId], references: [id], onDelete: Cascade)
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([battleId, userId])
    @@index([userId])
}

model BattleResult {
    id        String   @id @default(cuid())
    battleId  String   @unique
    winnerId  String?
    scores    Json
    duration  Int
    createdAt DateTime @default(now())

    battle  Battle @relation(fields: [battleId], references: [id], onDelete: Cascade)
    winner  User?  @relation(fields: [winnerId], references: [id], onDelete: SetNull)

    @@index([winnerId])
}

model StudyGroup {
    id        String   @id @default(cuid())
    name      String
    topic     String?
    inviteCode String  @unique
    createdAt DateTime @default(now())

    creatorId String
    creator   User   @relation("StudyGroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)

    members  StudyGroupMember[]
    messages GroupMessage[]
    sessions GroupSession[]

    @@index([creatorId])
}

model StudyGroupMember {
    id        String   @id @default(cuid())
    groupId   String
    userId    String
    joinedAt  DateTime @default(now())

    group StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
    user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([groupId, userId])
    @@index([userId])
}

model GroupMessage {
    id        String   @id @default(cuid())
    groupId   String
    userId    String?
    message   String   @db.Text
    isAI      Boolean  @default(false)
    timestamp DateTime @default(now())

    group StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
    user  User?      @relation(fields: [userId], references: [id], onDelete: SetNull)

    @@index([groupId])
    @@index([timestamp])
}

model GroupSession {
    id        String   @id @default(cuid())
    groupId   String
    summary   String   @db.Text
    duration  Int
    topics    Json?
    createdAt DateTime @default(now())

    group StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

    @@index([groupId])
}

model ConceptConnection {
    id                    String   @id @default(cuid())
    note1Id               String
    note2Id               String
    concept1              String
    concept2              String
    connectionDescription String   @db.Text
    strength              String
    createdAt             DateTime @default(now())

    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
    @@index([createdAt])
}